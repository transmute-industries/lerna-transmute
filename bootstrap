  if ! type "jq" >/dev/null 2>/dev/null; then
    if type "apt-get" >/dev/null 2>/dev/null; then
      sudo apt-get install -y jq
    elif type "dnf" >/dev/null 2>/dev/null; then
      sudo dnf install -y jq
    elif type "zypper" >/dev/null 2>/dev/null; then
      sudo zypper --non-interactive install -y jq
    elif type "pacman" >/dev/null 2>/dev/null; then
      sudo pacman -Sy --noconfirm jq
    elif type "brew" >/dev/null 2>/dev/null; then
      brew install jq < /dev/null
    elif type "chocolatey" >/dev/null 2>/dev/null; then
      chocolatey install jq
    else
      echo 'No appropriate installer found for jq, install jq and run this script again'
      exit 1
    fi
  else
    squawk 3 'jq already installed skipping'
  fi
}

transmute-cli_install () {
  cd $TRANSMUTE_REPO/packages/transmute-cli
  npm i
  npm run build
  npm i -g
}

windowsreqs () {
  check_cmd chocolatey
  install_curl
  install_git
  install_socat
  windowskubectl
  windowsminikube
  windowshelm
  windowsnsenter
  install_nvm
  lts_install
  check_prefix_npm
  install_ngrok_npm
  install_truffle_npm
  install_lerna_npm
  install_certbot
  install_jq
  dotfiles_install
  transmute-cli_install
}

macreqs () {
  check_cmd brew
  install_curl
  install_git
  install_socat
  set +e
  brew install gnupg < /dev/null
  set -e
  mackubectl
  macminikube
  machelm
  macnsenter
  macreadlink
  install_nvm
  lts_install
  check_prefix_npm
  install_ngrok_npm
  install_truffle_npm
  install_lerna_npm
  install_certbot
  install_jq
  dotfiles_install
  transmute-cli_install
}

linuxreqs () {
  #linuxreqs: $(TRANSMUTE_BIN) run_dotfiles minikube kubectl helm nsenter
  install_curl
  install_git
  install_socat
  install_kubectl_linux
  install_minikube_linux
  install_helm_linux
  install_nvm
  lts_install
  check_prefix_npm
  install_ngrok_npm
  install_truffle_npm
  install_lerna_npm
  install_certbot
  install_jq
  dotfiles_install
  transmute-cli_install
}

initializer () {
  ls  $TRANSMUTE_DIR/git
  ls $TRANSMUTE_DIR/git/transmute
  set +e
  cd $TRANSMUTE_DIR/git/transmute/transmute-config
  set -e
  cp .example.env .env
  set +e
  cd $TRANSMUTE_DIR/git/transmute
  set -e
  npm i
  set +e
  cd $CWD
  set -e
}

run_it () {
set -e
#set -u

# Let's display everything on stderr.
exec 1>&2

UNAME=$(uname)
if [ "$UNAME" = "Linux" -o "$UNAME" = "Darwin" ] ; then
  squawk 3 " $UNAME is a Supported OS"
elif [ "$UNAME" ">" "MINGW" -a "$UNAME" "<" "MINGX" ] ; then
  echo " $UNAME is not a Supported OS"
  exit 1
else
  echo " $UNAME is not a Supported OS"
  echo "Sorry, this OS is not supported yet via this installer."
  exit 1
fi

if [ "$UNAME" = "Darwin" ] ; then
  check_cmd brew
  ### OSX ###
  squawk 3 'Checking arch'
  if [ "i386" != "$(uname -p)" -o "1" != "$(sysctl -n hw.cpu64bit_capable 2>/dev/null || echo 0)" ] ; then
    # Can't just test uname -m = x86_64, because Snow Leopard can
    # return other values.
    echo "Only 64-bit Intel processors are supported at this time in OSX."
    exit 1
  fi

  PLATFORM="os.osx.x86_64"
elif [ "$UNAME" = "Linux" ] ; then
  ### Linux ###
  LINUX_ARCH=$(uname -m)
  if [ "${LINUX_ARCH}" = "x86_64" ] ; then
    PLATFORM="os.linux.x86_64"
  else
    echo "Unusable architecture: ${LINUX_ARCH}"
    echo "transmute only supports x86_64 for now."
    exit 1
  fi
elif [ "$UNAME" = "CYGWIN_NT-10.0" ] ; then
  PLATFORM="os.cygwin.x86_64"
fi

echo "Warning!"
sleep 1
echo "This script will install minikube, kubectl and helm,
and then install transmute."
if [[ "$USE_WARN" == 'y' ]]; then
  warrrn
fi

squawk 3 "Checking $TRANSMUTE_DIR"
mkdir -p $TRANSMUTE_DIR/git
mkdir -p $TRANSMUTE_BIN

if [ -e "$TRANSMUTE_DIR/git" ]; then
  squawk 3 "$TRANSMUTE_DIR/git exists already, proceeding"
else
  squawk 3 "$TRANSMUTE_DIR/git does not exist already, proceeding"
  cd $TRANSMUTE_DIR
  mkdir -p $TRANSMUTE_DIR/git
fi

# Install transmute components into k8s
# Grab the transmute dir
# Note in CI this has already been symlinked and does not run there
# however this will
if [ -e "$TRANSMUTE_REPO" ]; then
  squawk 3 "$TRANSMUTE_REPO exists already, proceeding"
  squawk 3 'Updating the transmute repo'
  cd $TRANSMUTE_REPO
  git fetch --tags
  git checkout $TRANSMUTE_RELEASE
  git submodule update --init
  cd $CWD
else
  cd $TRANSMUTE_DIR/git
  squawk 3 'Cloning the latest transmute repo'
  git clone --depth=1 \
   https://github.com/transmute-industries/transmute.git
  cd $TRANSMUTE_REPO
  git fetch --tags
  git checkout $TRANSMUTE_RELEASE
  git submodule update --init
  cd $CWD
fi

if [ "$FIX_DOTFILES" = "true" ]; then
  dotfiles_install
fi

squawk 5 ' make reqs'
if [ "$PLATFORM" = "os.linux.x86_64" ] ; then
  linuxreqs
elif [ "$PLATFORM" = "os.osx.x86_64" ] ; then
  macreqs
elif [ "$PLATFORM" = "os.windows.x86_64" ] ; then
  windowsreqs
fi

squawk 3 'check helm'
check_cmd helm
squawk 3 'check kubectl'
check_cmd kubectl
squawk 3 'check minikube'
check_cmd minikube
#check_cmd nsenter

squawk 3 'Initializer'
initializer

echo 'The bootstrap has finished'
echo 'you have completed all the way to "npm run setup" here:'
echo 'https://github.com/transmute-industries/transmute#environment-scripts-and-updating'
if [ "$PLATFORM" = "os.osx.x86_64" ] ; then
  SETUP_DIR=$(greadlink -f $TRANSMUTE_DIR)
else
  SETUP_DIR=$(readlink -f $TRANSMUTE_DIR)
fi
echo "First you will need to source your ~/.bashrc or ~/.zshrc file"
echo "Then you should be able run 'npm run setup' inside '$SETUP_DIR'"

trap - EXIT
# End run it wrapper
}

check_cmd mktemp
check_cmd uname

run_it
