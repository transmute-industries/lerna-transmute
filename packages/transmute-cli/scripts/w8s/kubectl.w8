#!/usr/bin/env bash

printf "wait on the K8S cluster to become available"
sleep 3

# while loop
countone=1
# timeout for 15 minutes
while [ $countone -lt 151 ]
do
   printf '.'
   kubectl get po --namespace=kube-system &> /dev/null
   if [ $? -ne 1 ]; then
      sleep 6
      break
  fi
  countone=`expr $countone + 1`
  sleep 3
done

echo  "."
echo  "kubectl commands are now able to interact with Minikube cluster"
sleep 3
